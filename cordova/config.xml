<widget id="com.newschool.app" version="2.0.2"  android-versionCode="10004" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
<name>New School</name>
<description> New School App </description>
<author email="newschool@newschoolapp.com.br" href="http://cordova.io"> New School Team </author>
<content src="index.html"/>
<plugin name="cordova-plugin-whitelist" spec="1"/>
<plugin name="cordova-plugin-x-socialsharing" source="npm"/>
<access origin="*"/>
<allow-intent href="http://*/*"/>
<allow-intent href="https://*/*"/>
<allow-intent href="tel:*"/>
<allow-intent href="sms:*"/>
<allow-intent href="mailto:*"/>
<allow-intent href="geo:*"/>
<platform name="android">
<preference name="android-minSdkVersion" value="22"/>
<icon src="res/android/36px.png" density="ldpi" />
<icon src="res/android/48px.png" density="mdpi" />
<icon src="res/android/72px.png" density="hdpi" />
<icon src="res/android/96px.png" density="xhdpi" />
<icon src="res/android/144px.png" density="xxhdpi" />
<icon src="res/android/192px.png" density="xxxhdpi" />
<allow-intent href="market:*"/>
</platform>
<platform name="ios">
<allow-intent href="itms:*"/>
<allow-intent href="itms-apps:*"/>
</platform>
</widget>
